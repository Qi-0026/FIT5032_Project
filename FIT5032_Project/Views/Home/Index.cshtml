@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>E-Hotel Booking System</h1>
    <p class="lead">E-Hotel Booking System is a fantastic serving which offers customers perfect experience.</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <p><a href="/Account/Register" class="btn btn-default btn-lg">Register &raquo;</a></p>
        <p><a href="/Account/Login" class="btn btn-primary btn-lg">Login &raquo;</a></p>
    }

</div>

<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-md-6">
            <h2>Booking now!</h2>
            <p>
                Choosing your perfered checkin and checkout date and we will show you all the hotels available.
            </p>
            <p><a class="btn btn-default" href="/Bookings/ChooseHotel">Booking Hotel &raquo;</a></p>
        </div>
        <div class="col-md-6">
            <h2>My Booking</h2>
            <p>Checking your booking condition.</p>
            <p><a class="btn btn-default" href="/Bookings">Manage My Booking &raquo;</a></p>
        </div>
    }
</div>